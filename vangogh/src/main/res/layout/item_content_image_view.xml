<com.vangogh.media.view.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/iv_content_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.vangogh.media.view.AnimateCheckBox
        android:id="@+id/checkbox"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        style="@style/AnimateCheckBoxStyle"
        />
</com.vangogh.media.view.SquareRelativeLayout>