<com.vangogh.media.view.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/iv_content_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dimen_5dp"
        android:layout_marginBottom="@dimen/dimen_3dp"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/img_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_video_white"
        />
    <TextView
        android:id="@+id/durationTv"
        android:layout_width="wrap_content"
        android:textColor="@color/picture_color_white"
        android:text="00:00"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dimen_3dp"
        android:layout_height="wrap_content"/>
        </LinearLayout>


    <include
        layout="@layout/media_select_checkbox"
        />
</com.vangogh.media.view.SquareRelativeLayout>