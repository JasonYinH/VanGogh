<com.vangogh.media.view.CheckSelectFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:clickable="true"
    android:paddingLeft="15dp"
    android:layout_gravity="center"
    android:paddingRight="8dp"
    >
    <com.vangogh.media.view.AnimateCheckBox
        android:id="@+id/checkbox"
        style="@style/AnimateCheckBoxStyle"
        android:layout_width="@dimen/dimen_15dp"
        android:layout_height="@dimen/dimen_15dp"
         />

</com.vangogh.media.view.CheckSelectFrameLayout>